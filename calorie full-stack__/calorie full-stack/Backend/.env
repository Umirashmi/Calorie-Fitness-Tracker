# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nutrition_tracker
DB_USER=postgres
DB_PASSWORD=123456789

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-token-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-here
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_ISSUER=nutrition-tracker-api
JWT_AUDIENCE=nutrition-tracker-client

# External API Keys
NUTRITIONIX_APP_ID=your-nutritionix-app-id
NUTRITIONIX_API_KEY=your-nutritionix-api-key
EDAMAM_APP_ID=your-edamam-app-id
EDAMAM_APP_KEY=your-edamam-app-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173, http://10.0.2.2:3000

# Security
BCRYPT_SALT_ROUNDS=12

# Cache Configuration
CACHE_TTL=3600

# Logging
LOG_LEVEL=info